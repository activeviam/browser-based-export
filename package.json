{
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-unicorn": "7.1.0",
    "jest": "24.1.0",
    "jest-junit": "6.2.1",
    "lerna": "3.11.0",
    "prettier": "1.16.4"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "private": true,
  "scripts": {
    "build": "lerna run build --stream --reject-cycles",
    "eslint": "eslint --ignore-path .gitignore --ignore-pattern !.eslintrc.js --max-warnings 0 .",
    "prepublish": "yarn run build",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,md,yml}\"",
    "test": "jest"
  },
  "workspaces": ["packages/*"]
}
